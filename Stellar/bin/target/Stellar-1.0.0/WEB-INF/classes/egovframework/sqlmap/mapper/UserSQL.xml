<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.psg.mapper.UserMapper">



<select id="userlist" resultType="com.psg.vo.UserVO">
	select slack_username AS author_name,
			 date AS time,
			 text AS text
    from commit_test
</select>

<insert id="commitinsert">
	insert into commit_test
					(slack_username, date, text)
					values(#{author_name}, now(), #{text})
</insert>


